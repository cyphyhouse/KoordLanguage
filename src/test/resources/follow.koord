agent Follow

using module Motion :
  actuators:
    ItemPosition target
  sensors :
    boolean inMotion
    boolean done
    ItemPosition position

local :
  inputMap destinations
  int destIndex
  int numWaypoints
  boolean arrived  = false
  boolean goForever = true

def stage {pick,go,wait,over}

init:
    destIndex = pid
    destinations = getInput()
    numWaypoints = destinations.size()

e1:
    pre: pick
    eff:
          arrived = false
          if (destinations.isEmpty()):
            stage = over
          else:
            target = getDestination(destinations, destIndex)
            destIndex = destIndex + 1
            if(destIndex >= numWaypoints):
              destIndex = 0
            stage = go

e2:
    pre: go
    eff:
        if(!inMotion):
          if(!goForever):
            if(target != null):
              destinations.remove(target.getName())
        arrived = true
        stage = wait
e3:
    pre: wait
    eff:
       if(done):
         stage = pick
e4:
    pre: (over)
    eff:
exit